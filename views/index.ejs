<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <script src="location.js"></script>
    <script src="signin.js"></script>
    <script src="saveLocation.js"></script>
    <script src="jwt-decode.js"></script>
    <script src="script.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <meta name="google-signin-client_id" content="859550291312-jmcarebfcc8hrqkq4c1p7t5qt5cj7l5f.apps.googleusercontent.com">
    <title>Rellit</title>
    <style>
        .hidden {
            display:none;
            position: sticky;
            top: 30px;
        }
        .question-container {
            margin-top: 20px;
            border: 3px solid black;
            padding:0;
        }
        .reply {
            margin-top:15px;
        }
        #replies-title {
            position: sticky;
            top: 0;
        }
        #ask-question {
            position: sticky;
            top: 0;
        }
        .reply-time {
            font-size:70%;
            font-weight:300;
        }
        .reply-time-span {
            float:right;
        }
    </style>
</head>
<body>
    <script>
        function displayResponses(questionId) {
            const replyContainers = document.getElementsByClassName("hidden");
            for (const container of replyContainers) {
                container.style.display = "none";    
            }
            const elementToShow = document.getElementById(questionId);
            elementToShow.style.display = "block";
        }

        document.addEventListener("DOMContentLoaded", function () {
            const urlParams = new URLSearchParams(window.location.search);
            const displayQuestion = urlParams.get('question');
            if (displayQuestion !== null) {
                displayResponses(displayQuestion);
            }
        });      
    </script>

    <%- include('partials/header.ejs') %>
    <div class="container mt-5">
          <div class="row">
              
            <div class="col-sm p-3 mb-2 bg-secondary text-white">
              MAP
              <a href="https://www.godaddy.com/">Go meet</a>
            </div>
            <div class="col-sm p-3 mb-2 bg-info text-dark">
              <form method="POST" action="/new-question" class="form-group" id="ask-question">
                    <label for="formGroupExampleInput">What are you curious about?</label>
                    <input type="text" name="question" class="form-control" id="formGroupExampleInput">
                    <input type="submit" class="btn btn-primary" value="Submit">
              </form>
              <% for (let i=0; i < data.length; i++) { %>
                <div class="question-container" style="cursor: pointer;" onclick="displayResponses('<%= data[i].questionId %>')">
                    <h3><%= data[i].text %></h3>
                    <small><%= formatTime(data[i].time) %></small>
                </div>     
            <% } %>
            </div>
            <div id="replies-column" class="col-sm p-3 mb-2 bg-secondary text-white">
              <div id="replies-title">Replies</div>
              <% for (let i=0; i < data.length ; i++) { %>
                <div class="hidden" id="<%= data[i].questionId %>">
                    <h4><%= data[i].text %></h4>
                    <% for (let j=0; j < data[i]["replies"].length; j++) { %>
                        <div>
                            <span><%= data[i]["replies"][j].text %></span>
                            <span class="reply-time-span"><small class="reply-time"><%= formatTime(data[i]["replies"][j].time) %></small></span>
                        </div>
                    <% } %>  
                    <form action="/reply" method="POST" class="reply">
                        <textarea rows="3" name="text" class="form-control" placeholder="Your Thoughts..." id="reply-textarea"></textarea>
                        <input type="hidden" name="questionId" value="<%= data[i].questionId %>">
                        <input type="submit" value="Post" class="btn btn-primary">
                    </form>
                </div>
            <% } %>
            </div>
          </div>
        </div>
    </div>
    <%
        function formatTime(time) {
            return time.toString().slice(0, 21);
        }
    %>

    
</body>
</html>