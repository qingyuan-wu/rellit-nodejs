    <title>Rellit</title>
    <style>
        .hidden {
            display:none;
            position: sticky;
            top: 30px;
        }
        .question-container {
            margin-top: 20px;
            border: 3px solid black;
            padding:0;
        }
        .reply {
            margin-top:15px;
        }
        #chat-title {
            position: sticky;
            top: 0;
        }
        #ask-question {
            position: sticky;
            top: 0;
        }
    </style>
</head>
<body>
    <script>
        function displayResponses(questionId) {
            const replyContainers = document.getElementsByClassName("hidden");
            for (const container of replyContainers) {
                container.style.display = "none";    
            }
            const elementToShow = document.getElementById(questionId);
            elementToShow.style.display = "block";
        }
        document.addEventListener("DOMContentLoaded", function () {
            const urlParams = new URLSearchParams(window.location.search);
            const displayQuestion = urlParams.get('question');
            if (displayQuestion !== null) {
                displayResponses(displayQuestion);
            }
        });
            
    </script>
    <div class="container mt-5">
        <div class="row">
          <div class="col">
            <div class="dropdown show">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Menu
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                  <a class="dropdown-item" href="#">About / FAQ's</a>
                  <a class="dropdown-item" href="#">Account Settings</a>
                  <a class="dropdown-item" href="#">Friends</a>
                </div>
            </div>
          </div>
          <div class="col-6">
            <h1 class="text-center">Welcome to Rellit!</h1>
            <div class="text-center mt-5" data-toggle="buttons">
                <label class="btn btn-secondary active">
                    <input type="radio" name="options" id="option1" autocomplete="off" checked> Ask a Question
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="options" id="option2" autocomplete="off"> Meet People
                </label>
            </div>
          </div>
          <div class="col">
            <div class="google-auth">
                <div id="g_id_onload"
                    data-client_id="859550291312-jmcarebfcc8hrqkq4c1p7t5qt5cj7l5f.apps.googleusercontent.com"
                    data-context="signin"
                    data-ux_mode="popup"
                    data-callback="handleCredentialResponse"
                    style="position: absolute; top: 100px; right: 30px;
                    width: 0; height: 0; z-index: 1001;">
                </div>
                <div class="g_id_signin"
                    data-type="standard"
                    data-shape="rectangular"
                    data-theme="outline"
                    data-text="sign_in_with"
                    data-size="large"
                    data-logo_alignment="left"
                    data-width=200>
                </div>
            </div>
          </div>
          </div>
          <div class="row">
            <div class="col-sm p-3 mb-2 bg-secondary text-white">
              MAP
            </div>
            <div class="col-sm p-3 mb-2 bg-info text-dark">
              <form method="POST" action="/new-question" class="form-group" id="ask-question">
                    <label for="formGroupExampleInput">What are you curious about?</label>
                    <input type="text" name="question" class="form-control" id="formGroupExampleInput">
                    <input type="submit" class="btn btn-primary" value="Submit">
              </form>
              <% for (let i=0; i < data.length; i++) { %>
                <div class="question-container" style="cursor: pointer;" onclick="displayResponses('<%= data[i].questionId %>')">
                    <h3><%= data[i].text %></h3>
                    <small><%= data[i].time.toString().slice(0, 24) %></small>
                </div>     
            <% } %>
            </div>
            <div id="chat-column" class="col-sm p-3 mb-2 bg-secondary text-white">
              <div id="chat-title">CHAT</div>
              <% for (let i=0; i < data.length ; i++) { %>
                <div class="hidden" id="<%= data[i].questionId %>">
                    <h4><%= data[i].text %></h4>
                    <% for (let j=0; j < data[i]["replies"].length; j++) { %>
                        <div><%= data[i]["replies"][j].text %></div>
                    <% } %>  
                    <form action="/reply" method="POST" class="reply">
                        <textarea rows="3" name="text" class="form-control" placeholder="Your Thoughts..."></textarea>
                        <input type="hidden" name="questionId" value="<%= data[i].questionId %>">
                        <input type="submit" value="Post" class="btn btn-primary">
                    </form>
                </div>
            <% } %>
            </div>
          </div>
        </div>
    </div>

