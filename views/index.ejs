<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <script src="location.js"></script>
    <script src="signin.js"></script>
    <script src="saveLocation.js"></script>
    <script src="jwt-decode.js"></script>
    <script src="script.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <meta name="google-signin-client_id" content="859550291312-jmcarebfcc8hrqkq4c1p7t5qt5cj7l5f.apps.googleusercontent.com">
    <title>Rellit</title>
    <style>
        .hidden {
            display:none;
            position: sticky;
            top: 30px;
        }
        .replies-container {
            background-color:rgb(127, 210, 238); 
            border-radius: 5px;
            padding: 10px;
        }
        .question-container {
            border-radius: 10px;
            background-color: #efefef;
            margin: 10px 0px 10px 0px;
            padding: 10px;
            text-align:left
        }
        .reply {
            margin-top:15px;
        }
        #chat-title {
            position: sticky;
            top: 0;
        }
        #ask-question {
            position: sticky;
            top: 0;
        }

        .reply-time {
            font-size:70%;
            font-weight:300;
        }
        .reply-time-span {
            float:right;
        }
        .reply-text-span {
            float: left;
        }
        .number-of-replies {
            float:right;
        }
        .column-2 {
            background-color: #5bc0de;
        }
        body{
            font-family: sans-serif;
            background-color: rgb(238,174,202);
            background: radial-gradient(circle, rgb(61, 114, 173) 0%, rgb(251, 252, 253) 100%);
            text-align:center;
            font-size: 20px;
            font-weight: 700;
        }
        button{
            margin-top: 10px;
            color: #ffffff;
            width: 100%;
            text-align: center;
            border: 0px;
            border-radius: 10px;
            padding: 10px 0px 10px 0px;
            font-size: 16px;
            outline: 0;
            cursor: pointer;
        }
        .orange-button{
            background-image: linear-gradient(rgb(100, 133, 143), lightskyblue);
            box-shadow: 0 4px #43474e05;
        }
        .orange-button:hover{
	        box-shadow: 0 2px #d19c57;
        }
        .orange-button:active{
	        box-shadow: 0 0px #d19c57;
        }
        input{
            padding: 10px;
            border-radius: 10px;
            border: 2px solid #cccccc;
            margin-bottom: 10px;
            box-sizing:inherit;
        }
    </style>
</head>
<body>
    <script>
        let previousQuestionContainer;
        let previouReplyContainer;
        function displayResponses(questionId) {
            const questionContainer = document.getElementById(`question-container-${questionId}`);
            questionContainer.style["background-color"] = "lightblue";
            if (previousQuestionContainer)
                previousQuestionContainer.style["background-color"] = "#efefef";
            if (previouReplyContainer)
                previouReplyContainer.style.display = "none";
            const replyContainer = document.getElementById(`replies-for-${questionId}`);
            replyContainer.style.display = "block";
            previousQuestionContainer = questionContainer;
            previouReplyContainer = replyContainer;
        }

        document.addEventListener("DOMContentLoaded", function () {
            const urlParams = new URLSearchParams(window.location.search);
            const displayQuestion = urlParams.get('question');
            if (displayQuestion !== null) {
                displayResponses(displayQuestion);
            }
        });      
    </script>
    <div class="container mt-5">
        <div class="row">
          <div class="col">
            <div class="dropdown show">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Menu
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                  <a class="dropdown-item" href="#">About / FAQ's</a>
                  <a class="dropdown-item" href="#">Account Settings</a>
                  <a class="dropdown-item" href="#">Friends</a>
                </div>
            </div>
          </div>
          <div class="col-6">
            <h1 class="text-center">Welcome to Rellit!</h1>
            <div class="text-center mt-5" data-toggle="buttons">
                <label class="btn btn-secondary active">
                    <input type="radio" name="options" id="option1" autocomplete="off" checked> Ask a Question
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="options" id="option2" autocomplete="off"> Meet People
                </label>
            </div>
          </div>
          <div class="col">
            <div class="google-auth">
                <div id="g_id_onload"
                    data-client_id="859550291312-jmcarebfcc8hrqkq4c1p7t5qt5cj7l5f.apps.googleusercontent.com"
                    data-context="signin"
                    data-ux_mode="popup"
                    data-callback="handleCredentialResponse"
                    style="position: absolute; top: 100px; right: 30px;
                    width: 0; height: 0; z-index: 1001;">
                </div>
                <div class="g_id_signin"
                    data-type="standard"
                    data-shape="rectangular"
                    data-theme="outline"
                    data-text="sign_in_with"
                    data-size="large"
                    data-logo_alignment="left"
                    data-width=200>
                </div>
            </div>
          </div>
          </div>
          <div class="row">
            <div class="col-sm p-3 mb-2 bg-secondary text-white">
              MAP
            </div>
            <div class="column-2 col-sm p-3 mb-2 text-dark" style="background: radial-gradient(circle, rgb(251, 252, 253)  0%, rgb(61, 114, 173) 100%)">
              <form method="POST" action="/new-question" class="form-group" id="ask-question">
                    <label for="formGroupExampleInput">What are you curious about?</label>
                    <input type="text" name="question" class="form-control" id="formGroupExampleInput">
                    <input class="orange-button" type="submit" class="btn btn-primary" value="Submit">
              </form>
              <% for (let i=0; i < data.length; i++) { %>
                <div class="question-container" id="question-container-<%= data[i].questionId %>" style="cursor: pointer;" onclick="displayResponses('<%= data[i].questionId %>')">
                    <h3><%= data[i].text %></h3>
                    <span class="number-of-replies">Replies: <%= data[i]["replies"].length %></span>
                    <small><%= formatTime(data[i].time) %></small>
                </div>     
            <% } %>
            </div>
            <div id="replies-column" class="col-sm p-3 mb-2 bg-secondary text-white">
              <div id="chat-title">Replies</div>
              <% for (let i=0; i < data.length ; i++) { %>
                <div class="hidden replies-container" id="replies-for-<%= data[i].questionId %>">
                    <div>
                        <h4><%= data[i].text %></h4>
                    </div>
                    <% for (let j=0; j < data[i]["replies"].length; j++) { %>
                        <div>
                            <span><%= data[i]["replies"][j].text %></span>
                            <span class="reply-time-span"><small class="reply-time"><%= formatTime(data[i]["replies"][j].time) %></small></span>
                        </div>
                    <% } %>  
                    <form action="/reply" method="POST" class="reply">
                        <textarea rows="3" name="text" class="form-control" placeholder="Your Thoughts..." id="reply-textarea"></textarea>
                        <input type="hidden" name="questionId" value="<%= data[i].questionId %>">
                        <input type="submit" value="Post" class="btn btn-primary">
                    </form>
                </div>
            <% } %>

            </div>
          </div>
        </div>
    </div>
    <%
        function formatTime(time) {
            return time.toString().slice(0, 21);
        }
    %>
    
</body>
</html>